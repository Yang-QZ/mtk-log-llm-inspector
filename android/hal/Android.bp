// Audio Dump Manager Library
// This module provides audio dump automation for Audio HAL integration

cc_library_shared {
    name: "libaudiodump",
    vendor: true,

    srcs: [
        "AudioDumpManager.cpp",
        "StreamDumper.cpp",
    ],

    header_libs: [
        "libhardware_headers",
    ],

    shared_libs: [
        "libbase",
        "liblog",
        "libcutils",
        "libutils",
    ],

    cflags: [
        "-Wall",
        "-Werror",
        "-Wextra",
        "-DLOG_TAG=\"AudioDump\"",
    ],

    export_include_dirs: ["."],

    // C++11 features required
    cppflags: [
        "-std=c++14",
    ],

    // Enable position independent code for shared library
    compile_multilib: "both",
}

// Static library version for linking into HAL
cc_library_static {
    name: "libaudiodump_static",
    vendor: true,

    srcs: [
        "AudioDumpManager.cpp",
        "StreamDumper.cpp",
    ],

    header_libs: [
        "libhardware_headers",
    ],

    shared_libs: [
        "libbase",
        "liblog",
        "libcutils",
        "libutils",
    ],

    cflags: [
        "-Wall",
        "-Werror",
        "-Wextra",
        "-DLOG_TAG=\"AudioDump\"",
    ],

    export_include_dirs: ["."],

    cppflags: [
        "-std=c++14",
    ],
}

// Headers only for integration examples
cc_library_headers {
    name: "libaudiodump_headers",
    vendor: true,
    export_include_dirs: ["."],
}

/*
 * Integration Instructions:
 *
 * 1. Add this module to your Audio HAL's Android.bp:
 *
 *    cc_library_shared {
 *        name: "audio.primary.your_platform",
 *        ...
 *        static_libs: [
 *            "libaudiodump_static",
 *        ],
 *        // OR for shared library:
 *        shared_libs: [
 *            "libaudiodump",
 *        ],
 *        ...
 *    }
 *
 * 2. Include the headers in your HAL code:
 *
 *    #include <AudioDumpManager.h>
 *    #include <StreamDumper.h>
 *
 * 3. See StreamOut_integration.cpp and StreamIn_integration.cpp
 *    for integration examples.
 *
 * 4. Build the module:
 *
 *    mmm path/to/android/hal
 *
 * 5. Push to device:
 *
 *    adb push out/target/product/xxx/vendor/lib64/libaudiodump.so /vendor/lib64/
 *
 * 6. Enable dump via adb:
 *
 *    adb shell "setprop vendor.streamout.pcm.dump 1"
 *    adb shell "setprop vendor.streamin.pcm.dump 1"
 *
 * 7. Monitor logs for dump notifications:
 *
 *    adb logcat | grep "AUDIO_DUMP_READY"
 */
